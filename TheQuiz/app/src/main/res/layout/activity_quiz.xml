<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swapnil.thequiz.QuizActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewQuestion"
        android:textColor="@color/blueGrey"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_alignEnd="@+id/btnNext" />


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:weightSum="10"
        android:id="@+id/radioGroup"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/txtViewQuestion"
        android:layout_toStartOf="@+id/btnNext"
        android:layout_marginEnd="1dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="vero"
            android:id="@+id/radioVero"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:textSize="29dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="falso"
            android:id="@+id/radioFalso"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="29dp"
            android:layout_weight="1.06" />
    </RadioGroup>

    <Button
        android:text="NEXT"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@color/btnColor2"
        android:layout_marginEnd="53dp"
        android:id="@+id/btnNext"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentEnd="true" />
</RelativeLayout>